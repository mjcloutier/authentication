.auth
  %h1{style: 'width:600px;margin-left:-130px;' } Resend Confirmation Instructions

  = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
    = f.error_notification
    = f.full_error :confirmation_token

    = f.input :email, required: true, autofocus: true, placeholder: 'E-mail'

    = f.button :submit, 'Resend confirmation instructions', class: 'btn btn-primary btn-block btn-large'

    = render 'devise/shared/links'
